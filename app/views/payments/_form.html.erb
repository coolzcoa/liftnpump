<%= form_for ([@member,@payment]) do |f| %>

  <%= render "devise/shared/error_messages", resource: @payment %>
  <div class="form-group">
    <%= f.label :payment_date %><br />
    <%= f.date_field :payment_date,class: 'form-control' ,required: true %>
  </div>

  <div class="form-group">
    <%= f.label :payment_amount %><br />
    <%= f.number_field :payment_amount,step: 0.01,class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Create",class: 'btn btn-primary' %>
  </div>

<% end %>
<%= javascript_include_tag 'packages', 'data-turbolinks-track': 'reload' %>